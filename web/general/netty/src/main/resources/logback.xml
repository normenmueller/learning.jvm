<configuration>
    
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%level %-5logger{5} - %message%n%xException{5}</pattern>
    </encoder>
  </appender>
  
  <logger name="io.netty"  level="error" />
  
  <root level="debug">
    <appender-ref ref="stdout" />
  </root>
  
</configuration>